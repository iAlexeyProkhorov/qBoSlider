@model SlideModel

@using Nop.Plugin.Widgets.qBoSlider.Models
@using Nop.Core;

@Html.ValidationSummary(false)
@Html.HiddenFor(model => model.Id)
@{
    CommonHelper.SetTelerikCulture();
}

@if (ViewBag.RefreshPage == true)
{
    <script type="text/javascript">
        try {window.opener.document.forms['@(ViewBag.formId)'].@(ViewBag.btnId).click();}
        catch (e){}
        window.close();
    </script>
}


<div class="content">
    <div class="form-horizontal">
        <div class="panel-group">
            <div class="panel panel-default panel-popup">
                <div class="panel-heading">
                    @T("Plugins.Widgets.qBoSlider.CreateOrEdit.Info")
                </div>
                <div class="panel-body">
                    @(Html.LocalizedEditor<SlideModel, SlideLocalizedModel>("slide-localized",
                                                                                                    @<div>
                                                                                                        <div class="form-group">
                                                                                                            <div class="col-sm-3">
                                                                                                                <nop-label asp-for="Locales[item].PictureId" />
                                                                                                            </div>
                                                                                                            <div class="col-sm-9">
                                                                                                                <nop-editor asp-for="Locales[item].PictureId" />
                                                                                                            </div>
                                                                                                        </div>

                                                                                                        <div>
                                                                                                            <div class="form-group">
                                                                                                                <div class="col-sm-3">
                                                                                                                    <nop-label asp-for="Locales[item].Hyperlink" />
                                                                                                                </div>
                                                                                                                <div class="col-sm-9">
                                                                                                                    <nop-editor asp-for="Locales[item].Hyperlink" />
                                                                                                                </div>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <div>
                                                                                                            <div class="form-group">
                                                                                                                <div class="col-sm-3">
                                                                                                                    <nop-label asp-for="Locales[item].Description" />
                                                                                                                </div>
                                                                                                                <div class="col-sm-9">
                                                                                                                    <nop-editor asp-for="Locales[item].Description" asp-template="RichEditor" />
                                                                                                                </div>
                                                                                                            </div>
                                                                                                            @Html.HiddenFor(model => model.Locales[item].LanguageId)
                                                                                                        </div>
                                                                                                    </div>, @<div>
                                                                                                        <div class="form-group">
                                                                                                            <div class="col-sm-3">
                                                                                                                <nop-label asp-for="PictureId" />
                                                                                                            </div>
                                                                                                            <div class="col-sm-9">
                                                                                                                <nop-editor asp-for="PictureId" />
                                                                                                                <span asp-validation-for="PictureId"></span>
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <div class="form-group">
                                                                                                            <div class="col-sm-3">
                                                                                                                <nop-label asp-for="Hyperlink" />
                                                                                                            </div>
                                                                                                            <div class="col-sm-9">
                                                                                                                <nop-editor asp-for="Hyperlink" />
                                                                                                            </div>
                                                                                                        </div>
                                                                                                        <div class="form-group">
                                                                                                            <div class="col-sm-3">
                                                                                                                <nop-label asp-for="Description" />
                                                                                                            </div>
                                                                                                            <div class="col-sm-9">
                                                                                                                <nop-editor asp-for="Description" asp-template="RichEditor" />
                                                                                                            </div>
                                                                                                        </div>
                                                                                                    </div>))
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="StartDateUtc" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="StartDateUtc" />
                            <span asp-validation-for="StartDateUtc"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="EndDateUtc" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="EndDateUtc" />
                            <span asp-validation-for="EndDateUtc"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="Published" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="Published" />
                            <span asp-validation-for="Published"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="DisplayOrder" />
                        </div>
                        <div class="col-sm-9">
                            <nop-editor asp-for="DisplayOrder" />
                            <span asp-validation-for="DisplayOrder"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group">
            <div class="panel panel-default panel-popup">
                <div class="panel-heading">
                    @T("plugins.widgets.qboslider.createoredit.acl")
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="SelectedCustomerRoleIds" />
                        </div>
                        <div class="col-sm-9">
                            <nop-select asp-for="SelectedCustomerRoleIds" asp-items="Model.AvailableCustomerRoles" asp-multiple="true" />
                            <script>
                                        $(document).ready(function() {
                                            var rolesIdsInput = $('#@Html.IdFor(model => model.SelectedCustomerRoleIds)').data("kendoMultiSelect");
                                            rolesIdsInput.setOptions({
                                                autoClose: false
                                            });

                                            @if (Model.AvailableCustomerRoles.Count == 0)
                                        {
                                            <text>
                                            rolesIdsInput.setOptions({
                                                enable: false,
                                                placeholder: 'No customer roles available'
                                            });
                                            rolesIdsInput._placeholder();
                                            rolesIdsInput._enable();
                                            </text>
                                        }
                                        });
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-group">
            <div class="panel panel-default panel-popup">
                <div class="panel-heading">
                    @T("plugins.widgets.qboslider.CreateOrEdit.storemappings")
                </div>
                <div class="panel-body">

                    <div class="form-group">
                        <div class="col-sm-3">
                            <nop-label asp-for="SelectedStoreIds" />
                        </div>
                        <div class="col-sm-9">
                            <nop-select asp-for="SelectedStoreIds" asp-items="Model.AvailableStores" asp-multiple="true" />
                            <script type="text/javascript">
                                $(document).ready(function() {
                                    var storesIdsInput = $('#@Html.IdFor(model => model.SelectedStoreIds)').data("kendoMultiSelect");
                                    storesIdsInput.setOptions({
                                        autoClose: false,
                                        filter: "contains"
                                    });

                                    @if (Model.AvailableStores.Count == 0)
                            {
                                <text>
                                    storesIdsInput.setOptions({
                                        enable: false,
                                        placeholder: '@T("Plugins.Widgets.qBoSlider.CreateOrEdit.NoStoresAvailable")'
                                    });
                                    storesIdsInput._placeholder();
                                    storesIdsInput._enable();
                                    </text>
                            }
                                });
                            </script>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

